<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2dp"
    app:cardCornerRadius="2dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/all_student_image"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_person"
            />
        <TextView
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/all_student_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/all_student_name"
            android:text="names"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"/>

        <TextView
            android:layout_toRightOf="@id/all_student_image"
            android:layout_below="@id/all_student_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/all_student_department"
            android:text="department"
            android:textColor="@color/colorPrimaryDark"
            />
        <TextView
            android:layout_toRightOf="@id/all_student_image"
            android:layout_below="@id/all_student_department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/all_student_matric_no"
            android:text="matric no"
            android:textColor="@color/colorPrimaryDark"
            />


    </RelativeLayout>

</android.support.v7.widget.CardView>